<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/keyboard_root"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/bg_keyboard">

<FrameLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="8dp">

<TextView
android:id="@+id/unicode_button"
android:layout_width="match_parent"
android:layout_height="45dp"
android:background="@drawable/special_key_background"
android:text="Unicode"
android:gravity="center"
android:textColor="@color/key_text_color"
android:textSize="16sp"
android:visibility="visible"/>

<LinearLayout
android:id="@+id/unicode_input_container"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:visibility="gone">

<EditText
android:id="@+id/unicode_input"
android:layout_width="0dp"
android:layout_height="45dp"
android:layout_weight="1"
android:background="@drawable/key_background_modern"
android:hint="اكتب هنا..."
android:textColor="@color/text_primary"
android:textColorHint="#CCCCCC"
android:paddingStart="12dp"
android:paddingEnd="12dp"/>

<ImageButton
android:id="@+id/unicode_close_button"
android:layout_width="45dp"
android:layout_height="45dp"
android:src="@drawable/ic_close"
android:background="@drawable/special_key_background"
android:layout_marginStart="8dp"/>
</LinearLayout>
</FrameLayout>

<com.keyboardtest.MyKeyboardView
android:id="@+id/keyboard_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/keyboard_background"
android:keyBackground="@drawable/key_background_modern"
android:keyTextColor="@color/key_text_color"
android:keyPreviewLayout="@layout/key_preview"
android:popupLayout="@layout/keyboard_popup" />

</LinearLayout>